<div class="profile-field{{#if className}} {{ className }}{{/if}}">
  <p class="profile-field__title">{{ title }}</p>
  {{#if edit}}
  <div><input class="profile-field__value--edit" value="{{ edit }}" type="{{ type }}"></input></div>
  {{else}}
  <div class="profile-field__value">{{ value }}</div>
  {{/if}}
</div>
